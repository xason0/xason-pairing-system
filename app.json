{
  "name": "Xason XtarmD Bot",
  "description": "Custom WhatsApp bot with QR deployment and web panel by Manasseh Amoako (Xason XtarmD)",
  "repository": "https://github.com/xason0/xason-xtarmd-bot",
  "logo": "https://your-custom-logo-url.com/logo.png",
  "keywords": ["whatsapp", "bot", "xason", "xtarmd"],
  "env": {
    "SESSION_ID": {
      "description": "Your session ID",
      "required": true
    },
    "OWNER_NAME": {
      "description": "Bot owner's name",
      "value": "Manasseh Amoako (Xason XtarmD)",
      "required": true
    },
    "OWNER_NUMBER": {
      "description": "Owner number e.g. 2547xxxxxxxx",
      "required": true
    },
    "PREFIX": {
      "description": "Command prefix for your bot (e.g. ! or .)",
      "required": true,
      "value": "."
    },
    "PUBLIC_MODE": {
      "description": "Enable public mode? (yes/no)",
      "required": true,
      "value": "yes"
    },
    "STARTING_BOT_MESSAGE": {
      "description": "Enable starting message? (yes/no)",
      "required": true,
      "value": "yes"
    },
    "WELCOME_MESSAGE": {
      "description": "Enable welcome message in groups? (yes/no)",
      "value": "no"
    },
    "BOT_NAME": {
      "description": "Display name for your bot",
      "value": "Xason XtarmD"
    },
    "BOT_IMAGE": {
      "description": "URL to your bot's menu image",
      "value": "https://files.catbox.moe/h2ydge.jpg"
    },
    "AUTO_REACT_STATUS": {
      "description": "Auto-like status updates (yes/no)",
      "value": "yes"
    },
    "AUTO_READ": {
      "description": "Mark chats as read automatically (yes/no)",
      "value": "no"
    },
    "AUTO_REACT": {
      "description": "Auto-react to messages (yes/no)",
      "value": "no"
    },
    "GROUPANTILINK": {
      "description": "Enable group anti-link protection (yes/no)",
      "value": "yes"
    },
    "HEROKU_API_KEY": {
      "description": "Your Heroku API key to manage app vars",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
